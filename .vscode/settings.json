{
  "editor.rulers": [
    100
  ],
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": false,
  "eslint.workingDirectories": [
    { "pattern": "./packages/*/", "changeProcessCWD": true }
  ],
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/dist": true,
    "**/.idea": true,
    "packages/**/.vscode": true,
    "packages/**/node_modules": false,
    "packages/**/.quasar": true,
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#700000",
    "titleBar.inactiveBackground": "#693232",
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true
  },
  "jest.pathToJest": "./node_modules/.bin/jest",
  "jest.pathToConfig": "./jest.config.js",
  "jest.disabledWorkspaceFolders": ["."]
}
